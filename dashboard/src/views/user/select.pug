extend  ../components/header.pug

block append head
    title User selection

block append body
    .container.is-max-desktop.pl-6.pr-6
        .title.is-2 User selection 
        .columns
            div.card.column.m-6(onclick="document.forms['harryForm'].submit();")
                form(action="/user/select", method="post", id="harryForm") 
                    input(type="hidden", name="username", value="harry")
                    figure.image
                        img(src="/static/assets/harry.png")
                    .card-footer
                        .card-footer-item.title.is-4 Harry
            div.card.column.m-6(onclick="document.forms['joelForm'].submit();")
                form(action="/user/select", method="post", id="joelForm") 
                    input(type="hidden", name="username", value="joel")
                    figure.image
                        img(src="/static/assets/joel.png")
                    .card-footer
                        .card-footer-item.title.is-4 Joel
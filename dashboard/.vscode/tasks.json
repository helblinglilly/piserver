{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "clear port",
      "group": "build",
      "command": "$(pwd)/.vscode/kill_port.sh",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": "build",
      "label": "tsc: build - tsconfig.json"
    },
    {
      "label": "build",
      "dependsOn": ["clear port", "tsc: build - tsconfig.json"]
    }
  ]
}
